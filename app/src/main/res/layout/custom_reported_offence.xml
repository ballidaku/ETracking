<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="3dp"
        card_view:cardCornerRadius="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutImageShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewReported"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_2sdp"
                        android:src="@mipmap/ic_launcher"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="16 Oct 2017"
                            android:textColor="@color/colorMaroon"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textViewTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:30 PM"
                            android:textColor="@color/colorMaroon"
                            android:textStyle="bold"/>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayoutReportedBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Reported By"
                            android:textColor="@color/colorMaroon"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textViewReportedBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorMaroon"
                            android:textStyle="bold"/>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/colorMaroon"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textViewLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sharan"
                        android:textColor="@color/colorMaroon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of the Species"
                        android:textColor="@color/colorMaroon"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textViewSpeciesName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sharan"
                        android:textColor="@color/colorMaroon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offence Description"
                        android:textColor="@color/colorMaroon"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sharan"
                        android:textColor="@color/colorMaroon"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutShareDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorBlackTransparent">

                <ImageView
                    android:id="@+id/imageViewShareDelete"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_delete"/>
            </LinearLayout>

        </FrameLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>